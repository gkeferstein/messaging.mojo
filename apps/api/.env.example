# ============================================
# MOJO Messaging API - Environment Configuration
# ============================================

# Server
NODE_ENV=development
PORT=3020
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://messaging:messaging_password@localhost:5432/messaging_db

# Redis
REDIS_URL=redis://localhost:6379

# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx

# accounts.mojo Integration
ACCOUNTS_API_URL=https://accounts.mojo-institut.de/api/v1
ACCOUNTS_INTERNAL_TOKEN=your-internal-api-token

# CORS Origins (comma-separated, or * for all)
CORS_ORIGINS=https://accounts.mojo-institut.de,https://payments.mojo-institut.de,https://kontakte.mojo-institut.de,https://campus.mojo-institut.de,http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
